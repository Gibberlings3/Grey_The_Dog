/* remove journal entry: Brage */

IF
	GlobalGT("BrageRiddle","GLOBAL",1)
	Global("C#_GreyBrageRiddle","LOCALS",0)
THEN
  RESPONSE #100
		SetGlobal("C#_GreyBrageRiddle","LOCALS",1)
		EraseJournalEntry(@100000)
END

